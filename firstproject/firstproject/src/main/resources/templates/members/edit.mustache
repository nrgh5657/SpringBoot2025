{{>layouts/header}}

<form class="container" action="/members/{{member.id}}/edit" method="post">
    <input type="hidden" name="id" value="{{member.id}}">

    <div class="mb-3">
        <label class="form-label">이메일</label>
        <input type="text" name="email" class="form-control" value="{{member.email}}" required>
    </div>

    <div class="mb-3">
        <label class="form-label">비밀번호</label>
        <input type="password" name="password" class="form-control" value="{{member.password}}" required>
    </div>

    <button type="submit" class="btn btn-primary">수정 완료</button>
    <a href="/members" class="btn btn-secondary ms-2">취소</a>
</form>

{{>layouts/footer}}
